---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Inicio from '../components/Inicio.astro';
import Servicios from '../components/Servicios.astro';
import Horario from '../components/Horario.astro';
import Contacto from '../components/Contacto.astro';
---

<Layout 
	title = "Pipas la Queretana"
	description = "Pipas de la mejor calidad para tu hogar solo en Queretaro"
>
	<Header/>

	<main class = "snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth">
		<div class = "snap-start snap-always">
			<Inicio/>
		</div>
		<div class = "snap-start snap-always">
			<Servicios/>
		</div>
		<div class = "snap-start snap-always">
			<Horario/>
		</div>
		<div class = "snap-start snap-always">
			<Contacto/>
		</div>
	</main>
</Layout>